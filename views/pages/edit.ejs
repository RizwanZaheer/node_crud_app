<div class="jumbotrom text-center">
    <h1>Editing
        <%= event.name %>
    </h1>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <% if(errors.length > 0 ){ %>
        <div class="alert alert-danger">
            //
            <% for(error of errors){ %>
            <%= error %> <br>
            //
            <% }%>
        </div>
        <% }%>
        <form action="/events/<%= event.slug %>" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input name="name" id="name" value="<%= event.name %>" type="text" class="form-control">
            </div>
            <div class="from-group">
                <label for="description">Description</label>
                <textarea class="form-control" name="description" id="description" rows="6"><%= event.description %></textarea>
            </div>
            <br>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg from-control">
                    Update
                </button>
            </div>
        </form>
    </div>
</div>